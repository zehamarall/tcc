package engine.Particulas;

import java.awt.Color;

import engine.MoveAbleGameObject;

public abstract class Particula extends MoveAbleGameObject {

	public double angle;
	public int contadorDeVida;
	public int TEMPO_TOTAL_DE_VIDA;
	public boolean vida;

	public Particula(int _x, int _y, float _velx, float _vely, Color _Cor,
			double _angle, int _TEMPO_DE_VIDA) {
		super(_x, _y, _velx, _vely, _Cor);
		vida = true;
		TEMPO_TOTAL_DE_VIDA = _TEMPO_DE_VIDA;
		angle = _angle;

	}

}
